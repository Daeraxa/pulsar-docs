{
  "name": "pulsar-docs",
  "version": "1.0.0",
  "description": "Proof of Concept: The laziest and least opinionated Static Site Builder",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./scripts/dev.js",
    "build": "npm run content:build && npm run tailwind:build && npm run mini:css && npm run mini:js && npm run content:copy",
    "start:dev": "cross-env NODE_ENV=development concurrently -n tailwind,node,content,minijs,minicss,copy -c blue,cyan,yellow,red,magenta,gray 'npm:tailwind:watch' 'npm:start' 'npm:content:watch' 'npm:mini:js' 'npm:mini:css' 'npm:content:copy'",
    "tailwind:build": "tailwindcss -i ./assets/css/site.css -o ./dist/site.css",
    "tailwind:watch": "tailwindcss -i ./assets/css/site.css -o ./dist/site.css --watch",
    "content:build": "node ./scripts/build.js",
    "content:watch": "nodemon ./scripts/build.js",
    "content:copy": "node ./scripts/copy.js",
    "mini:js": "node ./scripts/minify-js.js",
    "mini:css": "minify ./dist/site.css > ./dist/site.min.css"
  },
  "keywords": [
    "static-site-builder"
  ],
  "author": "confused-Techie",
  "license": "MIT",
  "nodemonConfig": {
    "ext": "js,json,md,ejs"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "clean-css": "^5.3.2",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.9",
    "front-matter": "^4.0.2",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-expandable": "^1.0.2",
    "markdown-it-fontawesome": "^0.3.0",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-include": "^2.0.0",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-kbd": "^2.2.2",
    "markdown-it-named-code-blocks": "^0.1.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "minify": "^9.2.0",
    "tailwindcss": "^3.3.1",
    "terser": "^5.16.8"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "express": "^4.18.2",
    "nodemon": "^2.0.22"
  }
}
